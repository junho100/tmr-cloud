{
  "Version": "2012-10-17",
  "Id": "CodePipelineS3BackendPolicy",
  "Statement": [
    {
      "Sid": "",
      "Effect": "Allow",
      "Principal": {
        "Service": [
          "codedeploy.amazonaws.com",
          "ec2.amazonaws.com"
        ]
      },
      "Action": ["s3:GetObject", "s3:GetObjectVersion", "s3:ListBucket"],
      "Resource": [
        "${s3_bucket_arn}/*",
        "${s3_bucket_arn}"
      ]
    }
  ]
}
